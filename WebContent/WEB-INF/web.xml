<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>JobPortal</display-name>
  <servlet>
    <servlet-name>BaseController</servlet-name>
    <servlet-class>simple.crud.app.controller.BaseController</servlet-class>
    <init-param>
      <param-name>base</param-name>
      <param-value>/CrudApp</param-value>
    </init-param>
    <init-param>
      <param-name>userBase</param-name>
      <param-value>/CrudApp/user</param-value>
    </init-param>
    <init-param>
      <param-name>imageURL</param-name>
      <param-value>/CrudApp/assets/images</param-value>
    </init-param>
    <init-param>
      <param-name>assets</param-name>
      <param-value>/CrudApp/assets/</param-value>
    </init-param>
    <init-param>
      <param-name>add_new_book</param-name>
      <param-value>/CrudApp/newBook</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>BaseController</servlet-name>
    <url-pattern>/home </url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>UserController</servlet-name>
  	<servlet-class>simple.crud.app.controller.UserController</servlet-class>
  	<init-param>
      <param-name>base</param-name>
      <param-value>/CrudApp</param-value>
    </init-param>
    <init-param>
      <param-name>userBase</param-name>
      <param-value>/CrudApp/user</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/user </url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>param1</param-name>
    <param-value>/CrudApp/home</param-value>
  </context-param>
  <context-param>
    <param-name>imageURL</param-name>
    <param-value>/CrudApp/assets/images</param-value>
  </context-param>
  <context-param>
    <param-name>imageURL</param-name>
    <param-value>/CrudApp/assets/js</param-value>
  </context-param>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>